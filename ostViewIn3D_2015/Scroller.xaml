<mps:ModPlusWindow x:Class="ostViewIn3D.Scroller"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mps="https://modplus.org/winfx/xaml/controls"
                      SizeToContent="WidthAndHeight" WindowTransitionsEnabled="False"
                      Topmost="True" ResizeMode="NoResize"
                      Loaded="Scroller_OnLoaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusStyle;component/Styles/Controls.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Slider Minimum="1" Maximum="50" SmallChange="1" Width="250" Margin="6"
            IsSnapToTickEnabled="True" Interval="1" Name="tbSection"></Slider>
</mps:ModPlusWindow>




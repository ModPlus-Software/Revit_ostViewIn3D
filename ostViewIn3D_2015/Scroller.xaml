<mpc:BaseMetroWindow x:Class="ostViewIn3D.Scroller"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mpc="clr-namespace:ModPlusAPI.Windows.Mpc;assembly=ModPlusAPI"
                      SizeToContent="WidthAndHeight"
                      Topmost="True"
                      Loaded="Scroller_OnLoaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ModPlusAPI;component/Windows/WinResources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Slider Minimum="1" Maximum="50" SmallChange="1" Width="250" Margin="5"
            Style="{DynamicResource MahApps.Metro.Styles.Slider.Win10}"
            IsSnapToTickEnabled="True" Interval="1" Name="tbSection"></Slider>
</mpc:BaseMetroWindow>



